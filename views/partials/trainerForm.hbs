   <div class="form-group mb-3">
    <label for="contact">Contact</label>
    <input name="contact" type="text" class="form-control {{#if errors.contact}}is-invalid{{/if}}" id="contact" placeholder="Enter contact email"
      value="{{ trainer.contact }}">
    {{#if errors.name}}
      <div class="invalid-feedback">
        {{errors.contact.message}}
      </div>
    {{/if}}
  </div>

  <div class="form-group mb-3">
    <label for="facebook">Facebook</label>
    <input name="facebook" type="text" class="form-control {{#if errors.name}}is-invalid{{/if}}" id="facebook" placeholder="Facebook link"
      value="{{ trainer.facebook }}">
    {{#if errors.facebook}}
      <div class="invalid-feedback">
        {{errors.facebook.message}}
      </div>
    {{/if}}
  </div>

  <div class="form-group mb-3">
    <label for="twitter">Twitter</label>
    <input name="twitter" type="text" class="form-control {{#if errors.name}}is-invalid{{/if}}" id="twitter" placeholder="Twitter link"
      value="{{ trainer.twitter }}">
    {{#if errors.twitter}}
      <div class="invalid-feedback">
        {{errors.twitter.message}}
      </div>
    {{/if}}
  </div>


  <div class="form-group mb-3">
    <label for="instagram">Instagram</label>
    <input name="instagram" type="text" class="form-control {{#if errors.name}}is-invalid{{/if}}" id="instagram" placeholder="Instagram link"
      value="{{ trainer.instagram }}">
    {{#if errors.instagram}}
      <div class="invalid-feedback">
        {{errors.instagram.message}}
      </div>
    {{/if}}
  </div>





  <div class="form-group mb-3">
    <label for="text">Description</label>
    <textarea name="description" type="text" class="form-control html-editor {{#if errors.description}}is-invalid{{/if}}" id="text"
      placeholder="Enter trainer description" rows="10">{{ trainer.description }}</textarea>
    {{#if errors.description}}<div class="invalid-feedback">{{errors.description}}</div>
    {{/if}}
  </div>

  <button class="btn btn-outline-light btn-lg px-5 mt-4 mb-4" type="submit">Send</button>
  </div>
  </div>
  </div>
  </div>
  </section>
</form>


