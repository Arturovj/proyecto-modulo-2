{{#if edit }}
  <form action="/gyms/{{gym.id}}/edit" method="POST" enctype="multipart/form-data">
{{else}}
  <form action="/gyms" method="POST">
{{/if}}
<section class="vh-70 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="card bg-dark text-white" style="border-radius: 1rem;">
         <div class="card-body p-5 text-center">
           <h2 class="fw-bold mb-2 text-uppercase">New Gym Form</h2>
      
  <div class="form-group mb-3">
    <label for="name">Name</label>
    <input name="name" type="text" class="form-control {{#if errors.name}}is-invalid{{/if}}" id="name" placeholder="Enter name"
      value="{{ gym.name }}">
    {{#if errors.name}}
      <div class="invalid-feedback">
        {{errors.name.message}}
      </div>
    {{/if}}
  </div>
  <div class="form-group mb-3">
    <label for="address">Address</label>
    <input name="address" type="text" class="form-control {{#if errors.address}}is-invalid{{/if}}" id="address" placeholder="Enter address"
      value="{{ gym.address }}">
    {{#if errors.address}}
      <div class="invalid-feedback">
        {{errors.address.message}}
      </div>
    {{/if}}
  </div>

<div class="form-group mb-3">
        <label for="image" class="form-label">Upload image</label>
        <input class="form-control {{#if errors.image}}is-invalid{{/if}}" name="image" type="file" id="image" placeholder="Enter image" value="{{ gym.image }}">
      {{#if errors.image}}
      <div class="invalid-feedback">
        {{errors.image.message}}
      </div>
    {{/if}}
      </div>
  
  {{!-- <div class="form-group mb-1">
