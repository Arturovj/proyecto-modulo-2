<div class="row justify-content-center my-5">
  <div class="col col-sm-8 col-md-6 col-lg-4">
    <div class="intro-register-img mb-4">
       <img src="/img/gymlogo.png" class="w-40 mx-auto d-block" style="width: 250px;px;" alt="intro" >
    </div>
    <form action="/login" method="post">

      <div class="input-group mb-2">
        <input type="text" name="email" class="form-control py-2 ps-4 {{#if errors.email}}is-invalid{{/if}}" placeholder="user@example.org" aria-label="User email" value="{{ user.email }}">
        {{#if errors.email}}<div class="invalid-feedback">{{ errors.email }}</div>{{/if}}
      </div>

      <div class="input-group mb-3">
        <input type="password" name="password" class="form-control py-2 ps-4" placeholder="Password" aria-label="User password">
        <button class="btn btn-outline-secondary password-toggle c-dark" type="button">
          <i class="fa fa-eye-slash fa-fw"></i>
        </button>
      </div>

      <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary bg-light-green border-0">Login</button>
      </div>

      <div class="d-grid gap-2 mt-2">
        <a href="/login/google" class="btn btn-danger border-0">
          <i class="fa fa-google"></i>Login with Google
        </a>
      </div>
    </form>
  </div>
</div>