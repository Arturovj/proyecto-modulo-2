<div class="row justify-content-center">
  <div class="col col-sm-8 col-md-6 col-lg-4 mt-5 mb-5">
    <div class="intro-register-img mb-4">
      <img src="/img/gymlogo.png" class="w-40 mx-auto d-block" style="width: 250px;px;" alt="intro" >
    </div>
    <form action="/register" method="post">
      <div class="input-group mb-2">
        <input type="text" name="name" class="custom-form-control form-control py-2 ps-4 {{#if errors.name}}is-invalid{{/if}}" placeholder="Name" aria-label="User name" value="{{ user.name }}">
        {{#if errors.name}}<div class="invalid-feedback">{{ errors.name }}</div>{{/if}}
      </div>

      <div class="input-group mb-2">
        <input type="text" name="email" class="custom-form-control form-control py-2 ps-4 {{#if errors.email}}is-invalid{{/if}}" placeholder="Emial: user@example.org" aria-label="User email" value="{{ user.email }}">
        {{#if errors.email}}<div class="invalid-feedback">{{ errors.email }}</div>{{/if}}
      </div>

      <div class="input-group mb-3">
        <input type="password" name="password" class="custom-form-control form-control py-2 ps-4 {{#if errors.password}}is-invalid{{/if}}" placeholder="Password" aria-label="User password">
        <button class="btn btn-outline-secondary password-toggle c-dark" type="button">
          <i class="fa fa-eye-slash fa-fw"></i>
        </button>
        {{#if errors.password}}<div class="invalid-feedback">{{ errors.password }}</div>{{/if}}
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload avatar</label>
        <input class="form-control" name="image" type="file" id="image">
      </div>
      <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary bg-light-green border-0">Register</button>
        <div class="d-grid gap-2 mt-2">
          <a href="/login/google" class="btn btn-danger border-0">
          <i class="fa fa-google"></i>
          Login with Google
          </a>
        </div>
      </div>
    </form>
  </div>
</div>